<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="pojoDaoFactory" class="com.savoirtech.hecate.osgi.example.factory.PojoDaoFactoryFactory"
          factory-method="createFactory"/>

    <bean id="personRepository" class="com.savoirtech.hecate.osgi.example.impl.PersonRepositoryImpl"
          init-method="loadSampleData">
        <argument ref="pojoDaoFactory"/>
    </bean>

    <service ref="personRepository" interface="com.savoirtech.hecate.osgi.example.PersonRepository"/>

</blueprint>